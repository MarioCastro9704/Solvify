<div class="card shadow-sm">
  <div class="card-body d-flex">
    <div class="me-3">
      <% if psychologist.profile_picture.attached? %>
        <%= cl_image_tag psychologist.profile_picture.key, class: 'rounded-circle', width: 100, height: 100, crop: :fill %>
      <% else %>
        <%= cl_image_tag "default_avatar", class: 'rounded-circle', width: 100, height: 100, crop: :fill %>
      <% end %>
    </div>
    <div>
      <h5 class="card-title mb-1"><%= psychologist.full_name %></h5>
      <p class="text-muted mb-2">Cédula: <%= psychologist.document_of_identity %></p>
      <p class="mb-1"><strong>Enfoque:</strong> <%= psychologist.approach %></p>
      <a href="#" class="text-decoration-none mb-2 d-block">Ver opiniones (<%= psychologist.reviews.count %>)</a>
      <div class="mb-2">
        <% psychologist.specialties.each do |specialty| %>
          <span class="badge bg-secondary me-1"><%= specialty %></span>
        <% end %>
        <a href="#" class="text-decoration-none">Ver más</a>
      </div>
      <p class="mb-1"><strong>Idiomas:</strong> <%= psychologist.languages %></p>
      <p class="mb-1"><strong>Nacionalidad:</strong> <%= psychologist.nationality %></p>
      <p class="mb-1"><strong>Precio por sesión (50 min):</strong> <span class="text-success"><%= number_to_currency(psychologist.price_per_session, unit: psychologist.currency) %></span></p>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-2">
        <%= link_to "«", pages_home_path(day: "prev", psychologist_id: psychologist.id), data: { turbo_frame: "availabilities_#{psychologist.id}" }, class: "btn btn-outline-secondary" %>
      </div>
      <div class="col-8">
        <turbo-frame id="availabilities_<%= psychologist.id %>">
          <% availabilities = psychologist.availabilities.where('business_date >= ?', Date.today).order(:business_date) %>
          <%= render partial: "pages/availabilities", locals: { availabilities: availabilities } %>
        </turbo-frame>
      </div>
      <div class="col-2 text-end">
        <%= link_to "»", pages_home_path(day: "next", psychologist_id: psychologist.id), data: { turbo_frame: "availabilities_#{psychologist.id}" }, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
