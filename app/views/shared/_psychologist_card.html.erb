
<div class="card shadow-sm">
  <div class="card-body d-flex">
    <div class="card-body d-flex">
      <div class="me-3">
        <% if psychologist&.user&.avatar&.attached? %>
          <%= image_tag url_for(psychologist.user.avatar), class: 'rounded-circle', size: "100x100" %>
        <% else %>
          <img src="default-avatar.png" class="rounded-circle" alt="Default Avatar" width="100" height="100">
        <% end %>
      </div>
    </div>

    <div>
      <h5 class="card-title mb-1"><%= psychologist.full_name %></h5>
      <p class="text-muted mb-2">Cédula: <%= psychologist.document_of_identity %></p>
      <p class="mb-1"><strong>Enfoque:</strong> <%= psychologist.approach %></p>
      <a href="#" class="text-decoration-none mb-2 d-block">Ver opiniones (<%= psychologist.reviews.count %>)</a>
      <div class="mb-2">
        <% psychologist.specialties.each do |specialty| %>
          <span class="badge bg-secondary me-1"><%= specialty %></span>
        <% end %>
        <a href="#" class="text-decoration-none">Ver más</a>
      </div>
      <p class="mb-1"><strong>Idiomas:</strong> <%= psychologist.languages %></p>
      <p class="mb-1"><strong>Nacionalidad:</strong> <%= psychologist.nationality %></p>
      <p class="mb-1"><strong>Precio por sesión (50 min):</strong> <span class="text-success"><%= number_to_currency(service.price_per_session, unit: "ARS ") %></span></p>
    </div>
  </div>
  <turbo-frame id="availabilities_<%= psychologist.id %>">
    <div class="card-footer">
      <div class="row">
        <div class="col-2">
          <%= link_to "«", pages_update_dates_path(day: "prev", start_date: @primer_dia, psychologist_id: psychologist.id), data: { turbo_frame: "availabilities_#{psychologist.id}" }, class: "btn btn-outline-secondary" %>
        </div>
        <div class="col-8">

            <%= render partial: "pages/availabilities", locals: { availabilities: service.psychologist.availabilities.where('business_date >= ?', @dates.first).where('business_date <= ?', @dates.last).order(:business_date), dates: @dates } %>

        </div>
        <div class="col-2 text-end">
          <%= link_to "»", pages_update_dates_path(day: "next", start_date: @primer_dia, psychologist_id: psychologist.id), data: { turbo_frame: "availabilities_#{psychologist.id}" }, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </turbo-frame>
</div>


