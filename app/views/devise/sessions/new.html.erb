<!------------------- Contenedor Principal  ------------------->
<div class="container d-flex justify-content-center align-items-center min-vh-100">

  <!------------------- Contenedor Log-in  ------------------->
  <div class="row border rounded-5 p-3 bg-white shadow box-area">

    <!------------------- Left Box ------------------->
    <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box" style="background: #ABFDD1">
      <div class="featured-image">
        <%= image_tag "icono-trans-fin.png", alt: "Random Image", class: "img-fluid", style: "width: 250px;" %>
      </div>
      <p class="fs-2" style="font-family: 'Courier New', Courier, monospace; font-weight: 600;">Inicia Sesión</p>
      <small class="fs-6 text-wrap text-center" style="width: 17rem;font-family: 'Courier New', Courier, monospace;">Respira hondo y reserva tu tiempo para cuidarte</small>
    </div>


    <!------------------- Right Box ------------------->
    <div class="col-md-6 right-box">
      <div class="row align-items-center mx-2">
        <div class="header-text mb-4 mt-3">
          <h3>¡Bienvenido a Solvify!</h3>
          <p>Estamos encantados de volver a verte aquí.</p>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs mb-3">
            <%= f.input :email, required: false, label: false, autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control form-control-lg bg-light fs-6', placeholder: 'Correo Electrónico' %>
          </div>
          <div class="form-inputs mb-1">
            <%= f.input :password, required: false, label: false, input_html: { autocomplete: "current-password" }, class: 'form-control form-control-lg bg-light fs-6', placeholder: 'Contraseña' %>
          </div>
          <div class="form-inputs mb-5">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="form-actions mb-3">
            <%= f.button :submit, "Ingresar", class: 'btn btn-lg btn-primary w-100 fs-6 rounded-pill' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>

  </div>
</div>
