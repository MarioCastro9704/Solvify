<div class="calendar-container">
  <div class="container-fluid">
    <div class="row my-5 justify-content-center align-items-center text-center">
      <div class="col-12 col-md-4 mb-3 mb-md-0">
        <%= link_to users_path(start_date: (@start_date - 1.week).to_s), class: 'btn btn-outline-secondary rounded-pill' do %>
          <i class="fas fa-chevron-left me-1"></i>Previous Week
        <% end %>
      </div>
      <div class="col-12 col-md-4 mb-3 mb-md-0">
        <h2 class="m-0">
          <i class="fas fa-calendar-alt me-2"></i>
          <%= @start_date.strftime("%b %d") %> - <%= @end_date.strftime("%b %d, %Y") %>
        </h2>
      </div>
      <div class="col-12 col-md-4">
        <%= link_to users_path(start_date: (@start_date + 1.week).to_s), class: 'btn btn-outline-secondary rounded-pill' do %>
          Next Week<i class="fas fa-chevron-right ms-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Time</th>
              <% (@start_date..@end_date).each do |day| %>
                <th><%= day.strftime("%a %d %b") %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% (0..23).each do |hour| %>
              <tr>
                <td><%= "%02d:00" % hour %></td>
                <% (@start_date..@end_date).each do |day| %>
                  <td class="align-top">
                    <% bookings = @bookings.select { |b| b.date == day && b.time.strftime("%H").to_i == hour } %>
                    <% bookings.each do |booking| %>
                      <div class="booking bg-light p-2 mb-2" style="position: relative; border-left: 5px solid <%= booking_color(booking) %>;">
                        <strong><%= booking.time.strftime("%H:%M") %></strong>: <%= booking.user.name %><br>
                        <span class="text-muted"><%= booking.psychologist.user.name %></span>
                        <div class="btn-group" style="position: absolute; top: 5px; right: 5px;">
                          <%= link_to edit_booking_path(booking), class: 'btn btn-primary btn-sm' do %>
                            <i class="fa fa-pencil"></i>
                          <% end %>
                          <%= link_to booking.link_to_meet, target: '_blank', class: 'btn btn-primary btn-sm' do %>
                            <i class="fa fa-video"></i>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-2">
      <div class="p-4">
        <h2>Create Booking</h2>
        <%= form_with model: Booking.new, url: bookings_path, local: true do |form| %>
          <div class="form-group my-4">
            <%= form.label :date, 'Date' %>
            <%= form.date_field :date, class: 'form-control' %>
          </div>
          <div class="form-group my-4">
            <%= form.label :time, 'Time' %>
            <%= form.time_field :time, class: 'form-control' %>
          </div>
          <div class="form-group my-4">
            <%= form.label :psychologist_id, 'Psychologist' %>
            <%= form.collection_select :psychologist_id, Psychologist.includes(:user).all, :id, :user_name, { prompt: 'Select Psychologist' }, class: 'form-control' %>
          </div>
          <div class="form-group my-4">
            <%= form.label :link_to_meet, 'Link to Meet' %>
            <%= form.text_field :link_to_meet, class: 'form-control' %>
          </div>
          <div class="form-group my-4">
            <%= form.hidden_field :user_id, value: current_user.id %>
            <%= form.submit 'Create Booking', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
